{
    "name": "code-gurus-server",
    "version": "0.0.0",
    "scripts": {
        "create-db": "node dist/db-infra/db-creation/createUsers.js",
        "drop-db": "node dist/db-infra/db-cleanup/dropAllTables.js",
        "build": "ts-node build.ts",
        "lint": "eslint . --ext .ts",
        "start": "node -r module-alias/register ./dist --env=production",
        "start:dev": "nodemon",
        "test": "nodemon --config ./spec/nodemon.json",
        "test:no-reloading": "ts-node -r tsconfig-paths/register ./spec"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts, html",
        "ignore": [
            "src/public"
        ],
        "exec": "ts-node -r tsconfig-paths/register ./src"
    },
    "_moduleAliases": {
        "@services": "dist/services",
        "@repos": "dist/repos",
        "@entities": "dist/entities",
        "@shared": "dist/shared",
        "@server": "dist/server",
        "@routes": "dist/routes"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "rules": {
            "max-len": [
                "error",
                {
                    "code": 100
                }
            ],
            "no-console": 1,
            "no-extra-boolean-cast": 0,
            "@typescript-eslint/restrict-plus-operands": 0,
            "@typescript-eslint/explicit-module-boundary-types": 0,
            "@typescript-eslint/no-explicit-any": 0,
            "@typescript-eslint/no-floating-promises": 0,
            "@typescript-eslint/no-unsafe-member-access": 0,
            "@typescript-eslint/no-unsafe-assignment": 0
        }
    },
    "eslintIgnore": [
        "src/public/",
        "build.ts"
    ],
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.105.0",
        "@aws-sdk/lib-dynamodb": "^3.105.0",
        "aws-sdk": "^2.1152.0",
        "command-line-args": "^5.2.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-async-errors": "^3.1.1",
        "fs-extra": "^10.1.0",
        "http-status-codes": "^2.2.0",
        "jet-logger": "^1.1.5",
        "jsonfile": "^6.1.0",
        "module-alias": "^2.2.2",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.18",
        "pm2": "^5.2.0",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.3",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/command-line-args": "^5.2.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^28.1.1",
        "@types/jsonfile": "^6.1.0",
        "@types/morgan": "^1.9.3",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^8.3.4",
        "supertest": "^6.2.3",
        "tsconfig-paths": "^4.0.0"
    }
}
